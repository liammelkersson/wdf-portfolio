<div id="main">
  <div class="w-screen p-8 flex flex-col items-center">
    <div class="flex flex-row flex-wrap justify-center w-screen">
      {{#if dbError}}
        <div class="text-white font-light text-2xl w-80 text-left ml-6 mt-4">
          Sorry, there was a problem with the database:<br />
          {{theError}}
        </div>
      {{else}}
        <div
          class="project blue-box-shadow h-full w-120 m-52 rounded-3xl bg-zinc-900 border border-solid border-gray-700"
        >
          <img
            src="../{{projects.pImageURL}}"
            alt="{{projects.pTitle}}"
            class="w-full h-48 object-cover rounded-t-3xl"
          />
          <div class="p-4">
            <h2
              class="text-white font-light text-2xl w-96 text-left ml-6 mt-4"
            >{{projects.pTitle}}</h2>
            <p
              class="text-gray-500 text-left ml-6 w-96 mt-2 text-sm"
            >{{projects.pDesc}}</p>
            <br />
            <a
              class="text-left ml-6 w-96 text-blue-400 mt-4"
              href="{{projects.pGitHubURL}}"
            >GitHub</a>
            <br />
            <p class="text-gray-500 text-left ml-6 mt-2 w-96">
              Technologies:
              {{projects.pTech}}</p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>