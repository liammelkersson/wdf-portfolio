<div id="main" class="bg-gray-200">
  <div>
    <h1>Modify Project</h1>
  </div>

  {{#if isLoggedIn}}
    <form action="/projects/update/{{project.pID}}" method="post">
      <fieldset>
        <label for="pTitle">Project Title:</label>
        <input
          type="text"
          name="pTitle"
          id="pTitle"
          value="{{project.pTitle}}"
          required="required"
        />
        <br />
        <textarea
          name="pIntro"
          id="pIntro"
          cols="30"
          rows="10"
          required="required"
          placeholder="Project Intro..."
          value="{{project.pIntro}}"
        ></textarea>
        <br />
        <textarea
          name="pDesc"
          id="pDesc"
          cols="30"
          rows="10"
          required="required"
          placeholder="Project Description..."
          value="{{project.pDesc}}"
        ></textarea>
        <br />
        <label for="">Image URL:</label>
        <input
          type="text"
          name="pImageURL"
          id="pImageURL"
          placeholder="/img/image.png"
          required="required"
          value="{{project.pImageURL}}"
        />
        <br />
        <label for="">GitHub URL:</label>
        <input
          type="text"
          name="pGitHubURL"
          id="pGitHubURL"
          placeholder="https://github.com/user/project"
          value="{{project.pGitHubURL}}"
        />
        <br />
        <label for="">Technologies:</label>
        <input
          type="text"
          name="pTech"
          id="pTech"
          placeholder="HTML, CSS, JavaScript..."
          required="required"
          value="{{project.pTech}}"
        />
        <br />
        <label for="pCat">Category:</label>
        <select name="pCat" id="pCat" required="required">
          <option
            value="Front-end"
            {{if (theCatFE project.pCat)}}
            selected="selected"
          >Front-end</option>
          <option
            value="Full-stack"
            {{if (theCatFS project.pCat)}}
            selected="selected"
          >Full-stack</option>
          <option
            value="Game dev"
            {{if (theCatGD project.pCat)}}
            selected="selected"
          >Game dev</option>
          <option
            value="Practice"
            {{if (theCatP project.pCat)}}
            selected="selected"
          >Practice</option>
          <option
            value="App dev"
            {{if (theCatAD project.pCat)}}
            selected="selected"
          >App dev</option>
        </select>
        <br />
        <label for="">Creator:</label>
        <input
          type="text"
          name="pUser"
          id="pUser"
          required="required"
          value="{{project.pUser}}"
        />
      </fieldset>
      <input type="submit" value="Create Project" />
    </form>
  {{else}}
    <p>You have to be logged in to add projects...</p>
  {{/if}}
</div>