<body class="bg-zinc-900">
  <header class="text-white p-4">
    <div class="container mx-auto flex justify-center">
      <h1 class="text-2xl font-semibold">Role Management Dashboard</h1>
    </div>
    <div class="container mx-auto flex justify-center">
      <a class="bg-blue-500 text-white m-5 p-4 rounded" href="/role/new">
        New Role
      </a>
      {{#if isAdmin}}
        <a
          class="bg-blue-500 text-white m-5 p-4 rounded"
          href="/project-dashboard"
        >
          Project Dashboard
        </a>
        <a
          class="bg-blue-500 text-white m-5 p-4 rounded"
          href="/user-dashboard"
        >
          User Dashboard
        </a>
      {{/if}}
    </div>
  </header>
  <div class="container mx-auto mt-8 p-4">
    <div class="bg-black text-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Role List</h2>
      <table class="w-full border-collapse border">
        <thead>
          <tr class="text-white">
            <th class="p-2 border">ID</th>
            <th class="p-2 border">Name</th>
            <th class="p-2 border">Permissions</th>
            <th class="p-2 border">Description</th>
            <th class="p-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each roles}}
            <tr class="text-white">
              <td class="p-2 border">{{rID}}</td>
              <td class="p-2 border">{{rName}}</td>
              <td class="p-2 border">{{rPermissions}}</td>
              <td class="p-2 border">{{rDesc}}</td>
              <td class="p-2 border">
                <a
                  class="bg-blue-500 text-white px-2 py-1 rounded m-5"
                  href="/role/update/{{rID}}"
                >
                  Edit
                </a>
                <a
                  class="bg-red-500 text-white px-2 py-1 rounded m-5"
                  href="/role/delete/{{rID}}"
                >
                  Delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <footer class="text-white p-4 mt-8">
    <div class="container mx-auto text-center">
      &copy; 2023 Role Management Dashboard
    </div>
  </footer>
</body>