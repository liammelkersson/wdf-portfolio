<div id="main" class="bg-gray-200 flex flex-col justify-center items-center">
  <div>
    <h1 class="font-light text-3xl mt-4">New User</h1>
  </div>

  {{#if isLoggedIn}}
    {{#if isAdmin}}
      <form action="/user/new" method="post">
        <fieldset>
          <label for="">Name:</label>
          <input
            type="text"
            name="uName"
            id="uName"
            placeholder="Liam Melkersson"
            required="required"
            class="m-2 rounded-lg p-1"
          />
          <br />
          <label for="">Username:</label>
          <input
            type="text"
            name="uUserName"
            id="uUserName"
            placeholder="username"
            required="required"
            class="m-2 rounded-lg p-1"
          />
          <br />
          <label for="">Email:</label>
          <input
            type="text"
            name="uEmail"
            id="uEmail"
            placeholder="liammelkersson@live.se"
            required="required"
            class="m-2 rounded-lg p-1"
          />
          <br />
          <label for="">Password:</label>
          <input
            type="text"
            name="uPassword"
            id="uPassword"
            placeholder="••••••••"
            required="required"
            class="m-2 rounded-lg p-1"
          />
          <br />
          <label for="uRole">Role:</label>
          <p>check database or ask admin for more information on roles</p>
          <select
            name="uRole"
            id="uRole"
            required="required"
            class="m-2 rounded-lg p-1"
          >
            <option value="1">Admin</option>
            <option value="2">User</option>
            <option value="3">User Manager</option>
            <option value="4">Editor</option>
            <option value="5">Creator</option>
          </select>
        </fieldset>
        <input
          type="submit"
          value="Add User"
          class="m-2 p-2 ml-20 bg-blue-500 text-white rounded-lg"
        />
      </form>
    {{else}}
      <p>You have to be logged in as an admin to add users...</p>
    {{/if}}
  {{/if}}
</div>