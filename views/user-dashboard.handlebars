<body class="bg-zinc-900">
  <!-- Header -->
  <header class="text-white p-4">
    <div class="container mx-auto flex justify-center">
      <h1 class="text-2xl font-semibold">User Management Dashboard</h1>
    </div>
    <div class="container mx-auto flex justify-center">
      <a class="bg-blue-500 text-white m-5 p-4 rounded" href="/user/new">
        New User
      </a>
      {{#if isAdmin}}
        <a
          class="bg-blue-500 text-white m-5 p-4 rounded"
          href="/project-dashboard"
        >
          Project Dashboard
        </a>
      {{/if}}
    </div>
  </header>

  <!-- Main Content -->
  <div class="container mx-auto mt-8 p-4">
    <div class="bg-black text-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">User List</h2>

      <!-- User Table -->
      <table class="w-full border-collapse border">
        <thead>
          <tr class="text-white">
            <th class="p-2 border">ID</th>
            <th class="p-2 border">Name</th>
            <th class="p-2 border">Username</th>
            <th class="p-2 border">Email</th>
            <th class="p-2 border">Password</th>
            <th class="p-2 border">Role</th>
            <th class="p-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Sample User Row (Replace with dynamic data) -->
          {{#each users}}
            <tr class="text-white">
              <td class="p-2 border">{{uID}}</td>
              <td class="p-2 border">{{uName}}</td>
              <td class="p-2 border">{{uUserName}}</td>
              <td class="p-2 border">{{uEmail}}</td>
              <td class="p-2 border">{{uPassword}}</td>
              <td class="p-2 border">{{uRole}}</td>
              <td class="p-2 border">
                <a
                  class="bg-blue-500 text-white px-2 py-1 rounded m-5"
                  href="/user/update/{{uID}}"
                >
                  Edit
                </a>
                <a
                  class="bg-red-500 text-white px-2 py-1 rounded m-5"
                  href="/user/delete/{{uID}}"
                >
                  Delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-white p-4 mt-8">
    <div class="container mx-auto text-center">
      &copy; 2023 User Management Dashboard
    </div>
  </footer>
</body>