<div id="main">
  <div class="w-screen p-8 flex flex-col items-center">
    <h1
      class="text-white font-light text-9xl mix-blend-exclusion mt-12"
    >{{project.pTitle}}</h1>
    <div class="flex flex-row flex-wrap justify-center w-screen">
      {{#if dbError}}
        <div class="text-white font-light text-2xl w-80 text-left ml-6 mt-4">
          Sorry, there was a problem with the database:<br />
          {{theError}}
        </div>
      {{else}}
        <div
          class="project blue-box-shadow h-96 w-96 m-5 rounded-3xl bg-zinc-900 border border-solid border-gray-700"
        >
          <img
            src="{{project.pImageURL}}"
            alt="{{project.pTitle}}"
            class="w-full h-48 object-cover rounded-t-3xl"
          />
          <div class="p-4">
            <p
              class="text-gray-500 text-left ml-6 mt-2 w-80 text-sm"
            >{{project.pDesc}}</p>
            <a
              class="text-gray-500 text-left ml-6 mt-2 w-80"
              href="{{project.pGitHubURL}}"
            >GitHub</a>
            <br />
            <p
              class="text-gray-500 text-left ml-6 mt-2 w-80"
            >{{project.pTech}}</p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>